@model MobileCar.Models.AddCarViewModel

<h1 class="text-center my-4">Add Cars For Sale</h1>

<div class="container">
    <div class="card shadow-sm">
        <div class="card-body">
            <form method="post">

                <div class="form-group row mb-3">
                    <label for="name" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="name" asp-for="Name" placeholder="Enter car name"/>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label for="price" class="col-sm-2 col-form-label">Price</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="price" asp-for="Price" placeholder="Enter price"/>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label for="kilometers" class="col-sm-2 col-form-label">Kilometers</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="kilometers" asp-for="Kilometers" placeholder="Enter kilometers"/>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label for="imageUrl" class="col-sm-2 col-form-label">Image URL</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="imageUrl" asp-for="ImageUrl" placeholder="Enter image URL"/>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 750px;
    }
    .card {
        margin-top: 20px;
        border-radius: 10px;
    }
    .card-body {
        padding: 30px;
    }
    .form-group label {
        font-weight: 500;
        margin-bottom: 5px;
    }
    .form-control {
        border-radius: 5px;
        box-shadow: none;
    }
    .btn-primary {
        border-radius: 5px;
        padding: 10px 20px;
    }
</style>
